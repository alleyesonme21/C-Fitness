@{
  Layout = "_Layout";
}

@using FitnessClient.Models;

<h2 class="text-center">Our Exercises</h2>
@using (Html.BeginForm())
{
  @Html.Label("Filter Exercises by Name")
  @Html.TextBox("Name")
  <input type="submit" value="Search" class="btn btn-info btn-sm"/>
}<br>
<div class="row">
  <div class="col-md-6">
    <ol>
@foreach (Exercise exercise in Model)
{
    <ul id="apiList">
        <li><strong> @exercise.Name</strong></li>
        <li>Difficulty: @exercise.Difficulty</li>
        @* <li>Type: @exercise.Type</li> *@
        <li>Targets: @exercise.Target</li>
        <li>Calories: @exercise.Calories</li>
    </ul>
    <br>
}
</ol>
  </div>
  <div class="col-md-6">
    <img id="apiImg" src="~/img/w6.svg" width="90%">
  </div>
</div>
